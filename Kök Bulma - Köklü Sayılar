k=1

while k > 0:
    print("Kök Bulma Programı")

    a = int(input("Bir Sayi Giriniz:"))
    c = int(input("Kök'ün Derecesini Giriniz:"))

    if c == 0:
        print("Tanımsız","\n", "-------------------", sep="")

    else:
        b = a ** (1/c)

        print("Sonuc:",b, "\n", "-------------------", sep="")
